{
  "name": "ng2-charts",
  "version": "2.4.10",
  "scripts": {
    "build": "npm-run-all -s clean:build build:prod",
    "start": "npm-run-all -s clean:build build:dev watch:demo",
    "watch": "npm-run-all -s clean:build -p watch:lib watch:demo",
    "build:prod": "ng build @talentia/ng2-charts --configuration production",
    "build:dev": "ng build @talentia/ng2-charts --configuration development",
    "watch:lib": "ng build @talentia/ng2-charts --configuration development --watch",
    "watch:demo": "wait-on dist/ng2-charts/package.json && ng serve demo",
    "demo:dev": "ng build demo --configuration development",
    "demo:prod": "ng build demo --configuration production",
    "clean:build": "rimraf dist .angular",
    "clean:modules": "rimraf node_modules",
    "clean:all": "npm-run-all -p clean:build clean:modules",
    "lint": "ng lint",
    "lint:lib": "ng lint @talentia/ng2-charts",
    "lint:app": "ng lint demo",
    "lint:lib-fix": "ng lint @talentia/ng2-charts --fix",
    "lint:app-fix": "ng lint demo --fix",
    "madge:lib": "madge --circular --ts-config ./projects/ng2-charts/tsconfig.lib.prod.json --extensions ts ./projects/ng2-charts/",
    "madge:demo": "madge --circular --ts-config ./projects/demo/tsconfig.app.json --extensions ts ./projects/demo/src/",
    "update-browserslist": "npx update-browserslist-db@latest"
  },
  "dependencies": {
    "@angular/animations": "19.2.15",
    "@angular/common": "19.2.15",
    "@angular/compiler": "19.2.15",
    "@angular/core": "19.2.15",
    "@angular/forms": "19.2.15",
    "@angular/platform-browser": "19.2.15",
    "@angular/platform-browser-dynamic": "19.2.15",
    "@angular/router": "19.2.15",
    "chart.js": "2.9.4",
    "chartjs-plugin-annotation": "0.5.7",
    "chartjs-plugin-datalabels": "0.7.0",
    "lodash-es": "4.17.21",
    "rxjs": "7.8.1",
    "tslib": "2.6.2",
    "zone.js": "0.15.1"
  },
  "devDependencies": {
    "@angular/build": "19.2.18",
    "@angular/cli": "19.2.18",
    "@angular/compiler-cli": "19.2.15",
    "@types/chart.js": "2.9.24",
    "@types/lodash-es": "4.17.12",
    "angular-eslint": "19.8.1",
    "eslint": "9.15.0",
    "ng-packagr": "19.2.2",
    "npm-run-all": "4.1.5",
    "rimraf": "6.0.1",
    "typescript": "5.5.2",
    "typescript-eslint": "8.16.0",
    "wait-on": "9.0.1"
  }
}
